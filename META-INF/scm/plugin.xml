<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<plugin>
    <scm-version>2</scm-version>
    <information>
        <name>scm-push-event-plugin</name>
        <version>0.1.0</version>
        <displayName>SCM Push Event</displayName>
        <description>Checks for pushes in scm repositories</description>
        <category>Information</category>
        <author>Jasper Bartscher</author>
    </information>
    <dependencies>
        <dependency version="2.9.0">scm-pushlog-plugin</dependency>
    </dependencies>
    <subscriber>
        <class>com.cloudogu.scw.PushRequestEventSubscriber</class>
        <event>com.cloudogu.scm.review.pushrequest.service.PushRequestEvent</event>
    </subscriber>
</plugin>